<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="shoot speed"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:id="@+id/shootSpeed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintVertical_bias="0.08"/>
    <SeekBar
            android:layout_width="165dp"
            android:layout_height="20dp"
            android:id="@+id/shootSpeedSeekBar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.08"
            android:max="1000" />

    <TextView
            android:text="decreasing area speed"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/textView" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/shootSpeed" android:layout_marginStart="56dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <SeekBar
            android:layout_width="165dp"
            android:layout_height="20dp"
            android:id="@+id/seekBar2" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/shootSpeedSeekBar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"/>
    <TextView
            android:text="it just mock. implementation comming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp"/>

    <TextView
        android:id="@+id/speedSeekRs"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/shootSpeedSeekBar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/applySettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="108dp"
        android:text="apply settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>