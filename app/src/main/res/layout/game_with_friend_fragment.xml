<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">


    <TextView
            android:text="@string/game"
            android:scrollbars="vertical"
            android:layout_width="398dp"
            android:layout_height="424dp"
            android:gravity="center"
            android:id="@+id/game_with_friend" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftMoveBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/game_with_friend"/>
    <Button
            android:text="@string/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightMoveBtn" app:layout_constraintStart_toEndOf="@+id/leftMoveBtn"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/game_with_friend"/>
    <Button
            android:text="@string/fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fireBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/rightMoveBtn" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.546" app:layout_constraintBottom_toBottomOf="@+id/game_with_friend"/>
    <Button
            android:text="@string/fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fire_p2"
            app:layout_constraintTop_toTopOf="@+id/game_with_friend" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/leftMoveBtn" app:layout_constraintEnd_toEndOf="@+id/game_with_friend"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"
            android:rotation="180"/>
    <Button
            android:text="@string/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_p2" app:layout_constraintStart_toEndOf="@+id/fire_p2"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/rightMoveBtn" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/game_with_friend" app:layout_constraintEnd_toEndOf="@+id/game_with_friend"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintVertical_bias="0.0"
            android:rotation="180"/>
    <Button
            android:text="@string/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_p2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/right_p2" android:layout_marginStart="8dp"
            android:layout_marginBottom="312dp" app:layout_constraintBottom_toTopOf="@+id/fireBtn"
            app:layout_constraintHorizontal_bias="0.472"
            android:rotation="180"/>

</android.support.constraint.ConstraintLayout>