<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/game_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:text="@string/game"
            android:scrollbars="vertical"
            android:layout_width="398dp"
            android:layout_height="424dp"
            android:gravity="center"
            android:id="@+id/game" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.357"
            app:layout_constraintHorizontal_bias="0.666"/>
    <Button
            android:text="@string/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftMoveBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/game"/>
    <Button
            android:text="@string/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightMoveBtn" app:layout_constraintStart_toEndOf="@+id/leftMoveBtn"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/game"/>
    <Button
            android:text="@string/fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fireBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/rightMoveBtn" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.546" app:layout_constraintBottom_toBottomOf="@+id/game"/>


</android.support.constraint.ConstraintLayout>